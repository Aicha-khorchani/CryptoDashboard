<Window x:Class="CryptoDashboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Crypto Dashboard"
        Height="720"
        Width="1000"
        Background="{StaticResource BackgroundBrush}"
        Icon="pack://application:,,,/Assets/coin.ico">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar: search + refresh -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="250"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"/>
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Width="120"
                    Height="35"/>
        </StackPanel>

<Grid Grid.Row="1">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="380"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- LEFT: Coin list (scrollable) -->
<ListView Grid.Column="0"
          ItemsSource="{Binding Coins}"
          SelectedItem="{Binding SelectedCoin}"
          Background="Black"
          Foreground="White"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          Height="Auto">

    <ListView.View>
        <GridView>

            <!-- Coin Name -->
            <GridViewColumn Header="Coin" Width="160">
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"
                                   Foreground="White"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding Name}"/>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>

            <!-- Price -->
            <GridViewColumn Header="Price" Width="90">
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding CurrentPrice}"
                                   Foreground="White"
                                   HorizontalAlignment="Right"/>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>

            <!-- View Button -->
            <GridViewColumn Width="60">
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <Button Content="View"
                                Width="50"
                                Command="{Binding DataContext.ShowCoinDetailsCommand,
                                          RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"/>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>

            <!-- Star -->
            <GridViewColumn Width="40">
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <Button Content="★"
                                Width="30"
                                Command="{Binding DataContext.ToggleFavoriteCommand,
                                          RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                            <Setter Property="Foreground" Value="Gold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>

        </GridView>
    </ListView.View>
</ListView>

    <!-- RIGHT: Chart + Stats + fav part -->
<Grid Grid.Column="1" Margin="10">

    <TabControl Background="Transparent"
                BorderThickness="0">

        <!-- ===================== -->
        <!-- TAB 1: FAVORITES -->
        <!-- ===================== -->
        <TabItem Header="★ Favorites">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FavoriteCoins}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="220"
                                    Height="110"
                                    Margin="6"
                                    Padding="10"
                                    Background="#1E1E1E"
                                    CornerRadius="10"
                                    BorderBrush="#333"
                                    BorderThickness="1">

                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Text="{Binding CurrentPrice,
                                              StringFormat='Price: {0:C}'}"
                                               Foreground="LightGreen"
                                               Margin="0,6,0,0"/>

                                    <Button Content="View"
                                            Width="70"
                                            Margin="0,8,0,0"
                                            Command="{Binding DataContext.ShowCoinDetailsCommand,
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </TabItem>

        <!-- ===================== -->
        <!-- TAB 2: CHART + DETAILS -->
        <!-- ===================== -->
        <TabItem Header="📈 Chart and Details">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toggle -->
                <Button Content="Toggle Chart"
                        Width="120"
                        Margin="0,0,0,10"
                        Command="{Binding ToggleChartCommand}"/>

                <!-- Chart + Stats -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Chart -->
                    <oxy:PlotView Grid.Column="0"
                                  Model="{Binding CurrentPlotModel}"
                                  Background="Transparent"/>

                    <!-- Stats -->
                    <StackPanel Grid.Column="1"
                                Margin="20,0,0,0"
                                Visibility="{Binding CurrentCoinDetails,
                                    Converter={StaticResource NullToVisibilityConverter}}">

                        <TextBlock Text="{Binding CurrentCoinDetails.Name}"
                                   FontSize="18"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding CurrentCoinDetails.CurrentPrice,
                                    StringFormat='Price: {0:C}'}"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="0,5"/>

                        <TextBlock Text="{Binding CurrentCoinDetails.PriceChange24h,
                                    StringFormat='24h: {0:F2}%'}"
                                   FontSize="16"
                                   Margin="0,5"
                                   Foreground="{Binding CurrentCoinDetails.PriceChange24h,
                                    Converter={StaticResource PriceColorConverter}}"/>

                        <TextBlock Text="{Binding CurrentCoinDetails.MarketCap,
                                    StringFormat='Market Cap: {0:N0}'}"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0,5"/>

                        <TextBlock Text="{Binding CurrentCoinDetails.TotalVolume,
                                    StringFormat='Volume: {0:N0}'}"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0,5"/>
                    </StackPanel>

                </Grid>
            </Grid>
        </TabItem>

    </TabControl>
</Grid>

    <!-- Loading indicator -->
    <ProgressBar Grid.ColumnSpan="2"
                 IsIndeterminate="True"
                 Visibility="{Binding IsLoading,
                                      Converter={StaticResource BooleanToVisibilityConverter}}"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Top"
                 Height="5"/>
</Grid>

    </Grid>
</Window>
